{
  "multipart": [
    { "when": { "up": "true" }, "apply": { "model": "ftb:block/world_engine_wall_plating_post" }},

    { "when": { "north": "low" },  "apply": { "model": "ftb:block/world_engine_wall_plating_side", "uvlock": true }},
    { "when": { "east":  "low" },  "apply": { "model": "ftb:block/world_engine_wall_plating_side", "y": 90,  "uvlock": true }},
    { "when": { "south": "low" },  "apply": { "model": "ftb:block/world_engine_wall_plating_side", "y": 180, "uvlock": true }},
    { "when": { "west":  "low" },  "apply": { "model": "ftb:block/world_engine_wall_plating_side", "y": 270, "uvlock": true }},

    { "when": { "north": "tall" }, "apply": { "model": "ftb:block/world_engine_wall_plating_side_tall", "uvlock": true }},
    { "when": { "east":  "tall" }, "apply": { "model": "ftb:block/world_engine_wall_plating_side_tall", "y": 90,  "uvlock": true }},
    { "when": { "south": "tall" }, "apply": { "model": "ftb:block/world_engine_wall_plating_side_tall", "y": 180, "uvlock": true }},
    { "when": { "west":  "tall" }, "apply": { "model": "ftb:block/world_engine_wall_plating_side_tall", "y": 270, "uvlock": true }}
  ]
}
